<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/commentitem_mainLayout"
	android:layout_height="120dp"
	android:layout_width="match_parent"	
	android:background="@color/main_bgd"
	android:paddingTop="3dp"
	android:paddingBottom="3dp" 
	android:paddingLeft="5dp"
	android:paddingRight="5dp">

	<TextView
		android:id="@+id/commentitem_commentNumber"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"		
		android:lines="1"
		android:background="@color/test_bgd"
		android:textColor="@color/main_fgd" 
		android:layout_alignParentLeft="true" 
		android:paddingRight="5dp" />
		
	<TextView
		android:id="@+id/commentitem_commentAuthor"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"		
		android:lines="1"
		android:background="@color/test_bgd"
		android:textColor="@color/main_fgd" 
		android:layout_toRightOf="@+id/commentitem_commentNumber"/>

	<TextView
		android:id="@+id/commentitem_commentTime"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:lines="1"
		android:background="@color/test_bgd"
		android:textColor="@color/main_fgd"				
		android:layout_alignParentRight="true"/>

	<TextView
		android:id="@+id/commentitem_commentText"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"		
		android:background="@color/test_bgd"
		android:textColor="@color/main_fgd"
		android:layout_below="@+id/commentitem_commentNumber"
		android:layout_alignParentLeft="true" 
		android:paddingLeft="10dp" />

	<ListView
		android:id="@+id/commentitem_repliesList"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:stretchMode="columnWidth"
		android:gravity="center"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp" />

</RelativeLayout>